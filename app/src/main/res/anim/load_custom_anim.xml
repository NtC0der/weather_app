<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Scale up the view to 1.5x its original size -->
    <scale
        android:fromXScale="1.0"
        android:toXScale="1.1"
        android:fromYScale="1.0"
        android:toYScale="1.1"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="600"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>

    <!-- Scale back down to the original size -->
    <scale
        android:fromXScale="1.1"
        android:toXScale="0.91"
        android:fromYScale="1.2"
        android:toYScale="0.91"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="600"
        android:startOffset="600"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>

    <!-- Rotate 20 to the right -->
    <rotate android:fromDegrees="0"
        android:toDegrees="10"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="800"
        android:interpolator="@android:anim/cycle_interpolator"/>

    <!-- Rotate 15 to the left -->
    <rotate android:fromDegrees="10"
        android:toDegrees="-12"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="800"
        android:duration="900"
        android:interpolator="@android:anim/cycle_interpolator"/>

    <!-- Rotate it back to original state -->
    <rotate android:fromDegrees="-2"
        android:toDegrees="2"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="500"
        android:startOffset="1700"
        android:interpolator="@android:anim/cycle_interpolator"/>

    <!-- Move the view up by 100 pixels -->
    <translate
        android:fromYDelta="0"
        android:toYDelta="-30"
        android:duration="700"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>

    <!-- Move the view up by 45 pixels-->
    <translate
        android:fromYDelta="-30"
        android:toYDelta="45"
        android:duration="900"
        android:startOffset="700"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>

    <!-- Move the view back to its original position-->
    <translate
        android:fromYDelta="15"
        android:toYDelta="-15"
        android:duration="500"
        android:startOffset="1600"
        android:interpolator="@android:anim/accelerate_decelerate_interpolator"/>
</set>